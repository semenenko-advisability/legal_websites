//- order = 'direct' || 'reverse'
//- banner = false || 'banner'
mixin about(order = "direct", banner = false, hasSidebar = true)
    - let className = "about__layout-" + order
    - if (!hasSidebar) className +=  " about__layout-nosidebar"
    section.about 
        .container-outer 
            h1.section-title.about__title #{title}
            if banner == 'banner'
                +foto('wide', 'about-wide.png')
            .about__layout(class=className)
                if block
                    block
                else
                    .about__content 
                        +foto 
                        +subtitle 
                        +text
                    aside.about__sidebar(class={"about__sidebar-centered": order !== 'reverse'})
                        +subtitle('big', 'Для связи<br> со мной')
                        +form

//- type = 'circle' || 'square' || 'rect' || 'wide' || 'vertical'
//- file = 'about.png' || '<your-image>'
mixin foto(type = "circle", file = "about.png")
    - let className = "about__image-" + type
    img.about__image(src="./assets/images/img/" + file alt="Фото-портрет" class=className)

//- size = 'small' || 'big'
//- title = '<your-title>'
mixin subtitle(size = 'small', title = "Наталья Лагутенкова, Кризисный Менеджер")
    - let className = "about__subtitle-" + size
    h2.about__subtitle(class=className) !{title}

